@model SushiPOP_BE1B_2C2023_G1.Models.Pedido

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" value="@Model.Estado" name="estadoAnt" />
          

            <div class="form-group">
                <label asp-for="NroPedido" class="control-label"></label>
                <input  asp-for="NroPedido" class="form-control" />
                <span asp-validation-for="NroPedido" class="text-danger"></span>
            </div>
             <div class="form-group">
                <input type="hidden" asp-for="FechaCompra" class="form-control" />
                <span asp-validation-for="FechaCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type ="hidden" asp-for="Subtotal" class="form-control" />
                <span asp-validation-for="Subtotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="GastoEnvio" class="form-control" />
                <span asp-validation-for="GastoEnvio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Total" class="form-control" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div> 
            <div class="form-group">
               @*  <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span> *@

                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-control" name="Estado" id="estado">
                    <option value="1"> Sin confirmar</option>
                    <option value="2">Confirmado</option>
                    <option value="3">En preparacion</option>
                    <option value="4">En reparto</option>
                    <option value="5">Entregado</option>
                    <option value="6">Cancelado</option>
                </select>
            </div>

             <div class="form-group">
                <select hidden asp-for="CarritoId" class="form-control" asp-items="ViewBag.CarritoId"></select>
                <span asp-validation-for="CarritoId" class="text-danger"></span>
            </div>
            
            <div class="form-group" style="margin-top:20px  ;">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-danger" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
